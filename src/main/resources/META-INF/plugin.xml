<idea-plugin>
    <id>com.github.sbouclier.intellij.plugin.designpatterns</id>
    <name>Java Design Patterns plugin</name>
    <vendor url="https://github.com/sbouclier/intellij-plugin-designpatterns">St√©phane Bouclier</vendor>

    <description><![CDATA[
    Java Design Patterns plugin for Intellij IDEA.<br>
    ]]></description>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <actions>
        <group id="designpatterns" text="Design Patterns">
            <add-to-group group-id="GenerateGroup" anchor="last"  />
            <separator/>
            <action id="designpatterns.builder" text="Builder"
                    class="com.github.sbouclier.intellij.plugin.designpatterns.builder.action.BuilderAction"/>
        </group>
    </actions>
</idea-plugin>